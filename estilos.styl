@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms webkit moz


@font-face
	font-family fuenteForus
	src url(charming.ttf)
	
a
	color #DD4F24


body
	background #EFEFEF
	font-family arial
	font-size 16px
	margin 0
	color black
	h1
		font-family fuenteForus
		font-size 60px !important
		padding 0 5rem
			

header
	border 1px solid red
	background #434343
	margin 0
	padding 0.5em
	color white

header figure, header h1
	display inline-block
	vertical-align top
	
nav
	text-align center
	background #878787
	font-size 0.9em
	ul
		padding 0.3rem 0
		li:hover
			border-bottom 2px solid white
		li 
			display inline-block
			vertical-align top
			list-style none
			border-right 1px solid red
			padding 0.3em 1em
			a
				padding 0.5em 1.5em
				display block
				color white
				text-decoration none
			a:hover
				 color #22BCE0

section
	margin 1em
	.item
		background white
		border-bottom 3px solid #22BCE0
		.tag_item
			background #22BCE0
			color white
			text-decoration none
			padding 0.2em 0.5em
			border-radius 0.5em
		p 
			font-size 0.9em
			color #7A7A7A
	.img_item
		float left	
		margin 0 1em 0 0
		font-style italic
	.titulo_item
		font-size 1em
		padding 0.5em 0.5em 0
		a
			color #444
			text-decoration none
		
			
#header_
		&titulo
			font-size 2em
			font-weight normal
			margin 1rem 0 0 1rem
			width 50%
			text-align center
		&avatar
			float right
			& img
				float left
				height 110px !important
		&figcaption
			background #22BCE0
			float right
			height 110px
			padding 0 2px

#nav_publicar
		background #DD4F24
		padding 0.3em 1em
		float right

#nav_blueBox
	float left
	padding 0.3em 0.5em
	background #22BCE0
	

					

	

			
	
	

