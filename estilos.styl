@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms webkit moz

@font-face {
	font-family: 'icomoon';
	src:url('fonts/icomoon.eot?-b3wsz4');
	src:url('fonts/icomoon.eot?#iefix-b3wsz4') format('embedded-opentype'),
		url('fonts/icomoon.woff?-b3wsz4') format('woff'),
		url('fonts/icomoon.ttf?-b3wsz4') format('truetype'),
		url('fonts/icomoon.svg?-b3wsz4#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face
	font-family fuenteForus
	src url(charming.ttf)
	
a
	color #DD4F24


body
	background #EFEFEF
	font-family arial
	font-size 16px
	margin 0
	color black
/*	h1
		font-family fuenteForus
		font-size 60px !important
		padding 0 5rem */
			

header
	border 1px solid red
	background #434343
	margin 0
	padding 0.5em
	color white

header figure, header h1
	display inline-block
	vertical-align top
	
footer
	background #878787
	color white
	display block
	.container
		margin 0
		padding 0
		text-align center
		border 1px solid red
		p:first-child
			margin-top 40px
		
	
	
nav
	text-align center
	background #878787
	font-size 0.9em
	ul
		padding 0.3rem 0
		li:hover
			border-bottom 2px solid white
		li 
			display inline-block
			vertical-align top
			list-style none
			border-right 1px solid red
			padding 0.3em 1em
			a
				padding 0.3em 0.8em 0.3em 0.3em
				display inline-block
				color white
				text-decoration none
			a:first-child
				margin-right 10px
			
			a:hover
				 color #22BCE0
			

section
	margin 1em
	.item
		background white
		border-bottom 3px solid #22BCE0
		position relative
		margin-bottom 3em
		
		.tag_item
			background #22BCE0
			color white
			float left
			text-decoration none
			padding 0.2em 0.5em
			border-radius 0.5em
			
		.votacion
			border-radius 0 0 0.5em 0.5em 
			text-align center
			position absolute
			background white
			top 100%
			padding 0.5em 0
			margin 0.3em 0
			width 110px	
		p 
			font-size 0.9em
			color #7A7A7A
			
		.data_item
			text-align right
			.star
				margin 0 1em 0 1em
			.comments
				background #878787
				border-radius 4px 
				color white
				margin 0 0 0 2em
				padding 4px
				text-decoration none
				 
		.data_item a:last-child 
			text-decoration none
			
		.data_item .star:after
			font-family 'icomoon'
			content "\e604"
			font-size 2em
			color #FFF400
			
	.img_item
		float left	
		margin 0 1em 0 0
		font-style italic
	.titulo_item
		font-size 1em
		padding 0.5em 0.5em 0
		a
			color #444
			text-decoration none
		
		
#bienvenida
	display none
				
#header_
		&titulo
			float center
			font-size 2em
			font-weight normal
			margin 1rem 0 0 1rem
			width 35%
			text-align center
		&avatar
			float right
			& img
				float left
				height 110px !important
		&figcaption
			background #22BCE0
			float right
			height 110px
			line-height 110px
			padding 0 2px
		&figcaption:after
			font-family 'icomoon'
			content "\e602"
			

#nav_publicar
	background #DD4F24
	float right
	margin-right 0
	position relative
	padding-right 1.5em
		
#nav_publicar:after
	content "\e600"
	color rgba(255,255,255,0.8)
	display block
	font-family 'icomoon'
	font-size 2em
	position absolute
	right 0
	top 0
	
	
#nav_blueBox
	float left
	padding 0.3em 0.5em
	background #22BCE0
	
#nav_blueBox:after
	content "\e603"
	color white
	font-family 'icomoon'
	font-family 0.7em
	
#nav_blueBox a:hover
	color black !important
	
.votacion .up, .votacion .down
	font-family 'icomoon'
	text-decoration none

.votacion .down:after
		content "\e602"
		color red
		font-size 1em
		
		
.votacion .up:after
		content "\e601"
		color green
		font-size 1em
	
	
		
		
	

					

	

			
	
	

